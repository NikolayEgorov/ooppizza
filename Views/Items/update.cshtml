@using pizza.ViewModels.Items;
@model UpdateViewModels;

@{
    Layout = "_Layout";
}

<div class="row mt-5 mb-5">
    <div class="col-md-3">
        <a class="btn btn-sm btn-success" href="/item/create">Додати</a>
        <a class="btn btn-sm btn-primary" href="/item/index">На головну</a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h1>Користувач: @Model.item.title</h1>

        <form action="/users/update" method="post">
            <input type="hidden" name="id" value="@Model.item.id">

            <div class="mb-3">
                <label for="name" class="form-label">Ім'я</label>
                <input type="text" class="form-control" id="name" name="name" value="@Model.item.title">
            </div>

            <div class="mb-3">
                <label for="surname" class="form-label">Прізвище</label>
                <input type="number" step="10" class="form-control" id="price" name="price" value="@Model.item.price">
            </div>

            <button type="submit" class="btn btn-primary">Створити</button>
        </form>
    </div>
</div>